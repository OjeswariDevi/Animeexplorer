<!DOCTYPE html>
<html>
<head>
  <title>Results</title>
</head>
<body>
  <h1>Search Results</h1>
  <a href="/">Back to Search</a>
  <ul>
    <% results.forEach(anime => { %>
      <li>
        <h2><%= anime.title %></h2>
        <img src="<%= anime.images.jpg.image_url %>" alt="<%= anime.title %>" width="150" />
        <p><%= anime.synopsis ? anime.synopsis.substring(0, 150) + '...' : 'No synopsis available.' %></p>
      </li>
    <% }) %>
  </ul>
</body>
</html>
